

<div class="mx-auto">
  <ul>
    <% @articles.each do |article| %>
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%=article.title%></h5>
          <p class="card-text"><%=article.content%></p>
          <%= link_to "", article_path(article), class: "stretched-link"%>
        </div>
      </div>
    <% end %>
  </ul>
</div>
